{
  "manifest_version": 3,
  "name": "Price Comparison Tool",
  "version": "1.0.0",
  "description": "Real-time price comparison across multiple e-commerce platforms",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://your-backend-domain.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Price Comparison Tool"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}